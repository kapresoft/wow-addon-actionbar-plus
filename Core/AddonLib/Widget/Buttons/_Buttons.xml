<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

    <Script file="ButtonUI.lua"/>
    <Script file="ButtonFactory.lua"/>
    <Script file="ReceiveDragEventHandler.lua"/>

    <Frame name="ActionbarPlusFrameTemplate" parent="UIParent" frameStrata="LOW"
           hidden="true" enableMouse="true" movable="true" alpha="0.5" virtual="true">
        <Scripts>
            <OnLoad>self:RegisterForDrag("LeftButton");</OnLoad>
            <OnDragStart>self:StartMoving();</OnDragStart>
            <OnDragStop>self:StopMovingOrSizing();</OnDragStop>
        </Scripts>
        <Size x="200" y="15" />
        <Anchors>
            <Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeto="UIParent">
                <Offset>
                    <AbsDimension x="5" y="-5" />
                </Offset>
            </Anchor>
        </Anchors>
        <Layers>
            <Layer level="ARTWORK">
                <Texture setAllPoints="true">
                    <Color r="0.1" g="0.1" b="0.1" a="0.2" />
                </Texture>
            </Layer>
            <Layer level="BACKGROUND">
                <Texture setAllPoints="true" file="Interface\DialogFrame\UI-DialogBox-Background" />
            </Layer>
        </Layers>
    </Frame>

    <Frame name="ActionbarPlusF1" inherits="ActionbarPlusFrameTemplate" />
    <Frame name="ActionbarPlusF2" inherits="ActionbarPlusFrameTemplate" />
    <Frame name="ActionbarPlusF3" inherits="ActionbarPlusFrameTemplate" />
    <Frame name="ActionbarPlusF4" inherits="ActionbarPlusFrameTemplate" />
    <Frame name="ActionbarPlusF5" inherits="ActionbarPlusFrameTemplate" />
    <Frame name="ActionbarPlusF6" inherits="ActionbarPlusFrameTemplate" />
    <Frame name="ActionbarPlusF7" inherits="ActionbarPlusFrameTemplate" />
    <Frame name="ActionbarPlusF8" inherits="ActionbarPlusFrameTemplate" />

</Ui>