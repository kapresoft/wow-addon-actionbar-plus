<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

    <Script file="Backdrops.lua"/>
    <Script file="Button.lua"/>
    <Script file="BarFrame.lua"/>

    <CheckButton name="ABP_ButtonTemplate_2_0_1" inherits="SecureActionButtonTemplate, ABP_ButtonTemplate_2_0"
                 mixin="ABP_ButtonMixin_2_0_1" virtual="true">
        <Scripts>
            <OnLoad method="OnLoad"/>
            <PostClick method="OnPostClick"/>
            <OnAttributeChanged method="OnAttributeChanged"/>
            <OnEvent method="OnEvent"/>
        </Scripts>
    </CheckButton>

    <Frame name="ABP_Parent_2_0" parent="UIParent" frameStrata="MEDIUM"
           hidden="false" enableMouse="false" clampedToScreen="true">
        <Size>
            <AbsDimension x="1" y="1"/>
        </Size>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
    </Frame>

    <!-- Note: Don't inherit from UIParent because it will inherit scale as well -->
    <Frame name="ABP_BarFrameTemplate_2_0" inherits="BackdropTemplate"
           frameStrata="MEDIUM" virtual="true" movable="true" clampedToScreen="true">
        <Size>
            <AbsDimension x="50" y="50"/>
        </Size>
        <Anchors>
            <Anchor point="CENTER" relativeTo="UIParent" relativePoint="CENTER" y="100" x="100"/>
        </Anchors>
    </Frame>
    <Frame name="ABP_BarFrameTemplate_2_0_1" inherits="ABP_BarFrameTemplate_2_0"
           mixin="ABP_BarFrameMixin_2_0_1" hidden="true" virtual="true">
        <Scripts>
            <OnLoad>self:OnLoad()</OnLoad>
            <OnDragStart>self:OnDragStart()</OnDragStart>
            <OnDragStop>self:OnDragStop()</OnDragStop>
            <OnSizeChanged>self:OnSizeChanged()</OnSizeChanged>
        </Scripts>
    </Frame>

</Ui>
